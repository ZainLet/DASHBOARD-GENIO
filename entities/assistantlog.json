{
  "name": "AssistantLog",
  "type": "object",
  "properties": {
    "eventType": {
      "type": "string",
      "enum": [
        "meta_incrementada",
        "tarefa_concluida",
        "tarefa_desfeita",
        "meta_decrementada"
      ],
      "description": "Tipo do evento"
    },
    "details": {
      "type": "string",
      "description": "Detalhes do evento"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Data e hora do evento"
    },
    "userId": {
      "type": "string",
      "description": "ID do usuário que executou a ação"
    },
    "userEmail": {
      "type": "string",
      "description": "Email do usuário"
    }
  },
  "required": [
    "eventType",
    "details",
    "timestamp",
    "userId",
    "userEmail"
  ]
}